<views:MvxWpfView
    x:Class="ZaliczenieWF.WPF.Views.ModalView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ZaliczenieWF.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    xmlns:vm="clr-namespace:ZaliczenieWF.Core.ViewModels.Main;assembly=ZaliczenieWF.Core"
    MinWidth="300"
    MinHeight="300"
    MaxWidth="300"
    MaxHeight="300"
    d:DesignHeight="300"
    d:DesignWidth="300"
    x:TypeArguments="vm:ModalViewModel"
    mc:Ignorable="d">
    <StackPanel Width="300" Height="300">
        <TextBlock Margin="5" Text="Wiadomość dla księdza prowadzącego" />
        <TextBox IsReadOnly="True" Text="{Binding Message}" />
    </StackPanel>
</views:MvxWpfView>